#extension GL_ARB_bindless_texture : enable

layout (local_size_x = 32, local_size_y = 32, local_size_z = 1) in;

#include<geometry.glsl>

void main(void)
{
    if (all(lessThan(gl_GlobalInvocationID, uvec3(geometryBufferSize(), 1u))))
    {
        geometryBufferClearFirstOITNodeID(ivec2(gl_GlobalInvocationID.xy));
    }
}
